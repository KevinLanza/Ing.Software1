<p id="notice"><%= notice %></p>

<h1>Dexes</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dexes.each do |dex| %>
      <tr>
        <td><%= image_tag dex.image.url(:thumb) %></td>
        <td><%= dex.name %></td>
        <td><%= dex.descripcion %></td>
        <td><%= link_to 'Show', dex %></td>
        <td><%= link_to 'Edit', edit_dex_path(dex) %></td>
        <td><%= link_to 'Destroy', dex, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

